ia_turn ()
{
  res = rand() % 10;
  if (res == 1)
    aff attack
      struct->player.pv -= tab_enemy[res].attack_power;
}

battle()
{
  while (pv > 0 || pvmonstre > 0)
    {
      if (i % 2 == 0)
	{
	  player__turn();
      }
      else
	ia_turn();
      i++;
    }
  if (pv == 0)
    return 1 == tes mort
    else 
return 0 == enemy mort
}
