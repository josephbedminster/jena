typedef struct s_enemy
{
  char *name;
  int **attack_power;
  int pv;
  char **attack_name;
}		t_enemy;

t_enemy tab_enemy[] = {
  {"noob", {10, 15 ,30}, 50, {"fire0", "thunder"}},
  {"noob", {10, 15 ,30}, 50, {"fire0", "thunder"}}
};


player_turn)()
{
  char entre = readLine()

    if (entre == "fire")
      struc->enemy.pv -= 50;
